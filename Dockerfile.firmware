# --- Builder Stage ---
FROM rust:1-bullseye-slim as builder
RUN apt-get update && apt-get install -y pkg-config libssl-dev
WORKDIR /usr/src/kasi-power
COPY . .
RUN cargo build --release -p firmware

# --- Runner Stage ---
FROM debian:bullseye-slim
RUN apt-get update && apt-get install -y openssl && rm -rf /var/lib/apt/lists/*
COPY --from=builder /usr/src/kasi-power/target/release/firmware /usr/local/bin/firmware
# CMD is now hardcoded, explicit, and correct
CMD ["/usr/local/bin/firmware"]
